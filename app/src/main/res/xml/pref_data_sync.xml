<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="180"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:icon="@drawable/ic_access_alarm_black_24dp"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency" />

    <PreferenceCategory android:title="@string/pref_title_sync_network" />

    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_wifi_black_24dp"
        android:key="sync_network_wlan"
        android:title="@string/pref_title_network_wlan" />

    <SwitchPreference
        android:defaultValue="false"
        android:dependency="sync_network_wlan"
        android:icon="@drawable/ic_network_cell_black_24dp"
        android:key="sync_network_mobile"
        android:title="@string/pref_title_network_mobile" />


</PreferenceScreen>
